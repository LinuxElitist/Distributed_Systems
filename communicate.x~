const MAXSTRING = 120;
const MAX_LENGTH = 15;

typedef string ip[MAX_LENGTH];
typedef string article[MAXSTRING];

struct connect {
int port;
string ip;
}

struct pub {

article art;
string ip;
int port;

}

struct sub {

string ip;
int port;
article art;

}

program COMMUNICATE_PROG {
	version COMMUNICATE_VERSION {

	bool JOIN(connect) = 1;
	bool LEAVE(connect) = 2 ;
	bool SUBSCRIBE(sub) =3;
	bool UNSUBSCRIBE(sub)=4;
	bool PUBLISH(pub)=5;
	bool PING() = 6
} = 1;
	
} = 0x42424242;
